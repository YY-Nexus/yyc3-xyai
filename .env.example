# YYC³ 智能插拔式移动AI系统 - 环境变量配置示例
# Intelligent Pluggable Mobile AI System Environment Configuration
# 复制此文件为 .env.local 并填入实际值

# ===========================================
# 应用基础配置
# ===========================================

# 环境类型
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# 应用版本 (自动设置)
NEXT_PUBLIC_APP_VERSION=1.0.0

# 构建时间 (自动设置)
NEXT_PUBLIC_BUILD_TIME=2026-01-01T00:00:00Z

# 应用域名
NEXT_PUBLIC_APP_URL=http://localhost:1229
NEXT_PUBLIC_APP_NAME=YYC³ AI小语智能成长守护系统

# 系统基础配置
PORT=1229
HOST=0.0.0.0

# API网关配置
API_GATEWAY_PORT=1229
TOOL_SERVICE_PORT=3001
KNOWLEDGE_SERVICE_PORT=3002

# ===========================================
# AI服务配置
# ===========================================

# OpenAI API配置
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Azure Speech Services 配置
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=eastus
AZURE_SPEECH_LANGUAGE=zh-CN

# AI服务API地址
NEXT_PUBLIC_AI_API_URL=https://api.0379.email/v1

# BigModel API配置 (智谱AI) - 用于作业批改和语音服务
# 获取API密钥: https://bigmodel.cn/usercenter/proj-mgmt/apikeys
NEXT_PUBLIC_BIGMODEL_API_KEY=your_bigmodel_api_key_here

# ===========================================
# 数据库配置
# ===========================================

# Supabase配置
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# PostgreSQL配置 (如果使用自建数据库)
DATABASE_URL=postgresql://username:password@localhost:5432/yyc3_my
POSTGRES_USER=yyc3_my
POSTGRES_PASSWORD=yyc3_my
POSTGRES_DB=yyc3_my

# Redis配置 (如果使用自建Redis)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_6379

# ===========================================
# 第三方服务配置
# ===========================================

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=prj_csCsH6qPKLqmrOyCKCJAnZ5hU2Yu

# Sentry错误监控 (可选)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# Google Analytics (可选)
NEXT_PUBLIC_GA_ID=GA_MEASUREMENT_ID

# ===========================================
# 国际化配置
# ===========================================

# 默认语言
NEXT_PUBLIC_DEFAULT_LOCALE=zh

# 支持的语言列表
NEXT_PUBLIC_LOCALES=zh,en

# ===========================================
# 文件存储配置
# ===========================================

# 文件上传大小限制 (MB)
NEXT_PUBLIC_MAX_FILE_SIZE=10

# 文件上传类型限制
NEXT_PUBLIC_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,mp3,wav,mp4,pdf,doc,docx

# AWS S3配置 (如果使用S3)
AWS_S3_BUCKET=your-s3-bucket
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ===========================================
# 推送通知配置
# ===========================================

# Firebase配置 (如果使用Firebase推送)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----your-firebase-private-key-----END PRIVATE KEY-----

# ===========================================
# 监控和日志配置
# ===========================================

# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# Sentry环境 (production, staging, development)
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# ===========================================
# 开发工具配置
# ===========================================

# 开发模式调试
NEXT_PUBLIC_DEBUG=false

# 热重加载
NEXT_PUBLIC_HOT_RELOAD=true

# 错误边界显示
NEXT_PUBLIC_SHOW_ERROR_BOUNDARY=true

# ===========================================
# 安全配置
# ===========================================

# JWT密钥 (用于用户认证)
JWT_SECRET=your-very-secure-jwt-secret-key-here

# CORS配置
CORS_ORIGIN=http://localhost:1229

# API速率限制
API_RATE_LIMIT=100

# ===========================================
# 本地开发配置
# ===========================================

# 本地服务器端口
PORT=1229

# 下一个应用端口 (如果有)
NEXT_PUBLIC_API_PORT=8000

# 开发环境数据库端口
POSTGRES_PORT=5432
REDIS_PORT=6379

# ===========================================
# 测试环境配置
# ===========================================

# 测试数据库URL
TEST_DATABASE_URL=postgresql://test:test@localhost:5433/yyc3_ai_test

# 测试Redis URL
TEST_REDIS_URL=redis://localhost:6380

# 测试模式标志
NEXT_PUBLIC_TEST_MODE=true

# ===========================================
# 生产环境特殊配置
# ===========================================

# 生产环境域名
# NEXT_PUBLIC_APP_URL=https://yyc3.ai

# 生产环境API地址
# NEXT_PUBLIC_AI_API_URL=https://api.yyc3.ai/v1

# 生产环境数据库
# DATABASE_URL=postgresql://prod_user:secure_password@prod-db:5432/yyc3_ai_prod

# 生产环境缓存配置
# REDIS_URL=redis://prod-redis:6379

# ===========================================
# 功能开关配置
# ===========================================

# 是否启用PWA功能
NEXT_PUBLIC_ENABLE_PWA=true

# 是否启用离线模式
NEXT_PUBLIC_ENABLE_OFFLINE=true

# 是否启用实时功能
NEXT_PUBLIC_ENABLE_REALTIME=true

# 是否启用分析功能
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# 是否启用AI对话功能
NEXT_PUBLIC_ENABLE_AI_CHAT=true

# 是否启用语音功能
NEXT_PUBLIC_ENABLE_VOICE_CHAT=true

# 是否启用情感分析
NEXT_PUBLIC_ENABLE_EMOTION_ANALYSIS=true

# ===========================================
# UI/UX 配置
# ===========================================

# 主题配置 (light, dark, auto)
NEXT_PUBLIC_THEME_MODE=auto

# 是否启用动画
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# 是否启用调试信息
NEXT_PUBLIC_SHOW_DEBUG_INFO=false

# ===========================================
# 备份和恢复配置
# ===========================================

# 备份存储位置
BACKUP_STORAGE_PATH=./backups

# 自动备份间隔 (小时)
AUTO_BACKUP_INTERVAL=24

# 备份保留天数
BACKUP_RETENTION_DAYS=30

# ===========================================
# 部署环境配置
# ===========================================

# 部署环境 (development, staging, production)
DEPLOY_ENVIRONMENT=development

# 容器配置
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_NAME=yyc3/yyc3-ai-xiaoyu

# 容器标签
DOCKER_IMAGE_TAG=latest

# ===========================================
# 第三方集成配置
# ===========================================

# 微信配置 (如果需要微信登录)
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# 支付宝配置 (如果需要支付功能)
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=YYC³ AI小语

# ===========================================
# 调试和性能配置
# ===========================================

# 性能监控
NEXT_PUBLIC_PERFORMANCE_MONITORING=false

# 内存监控
NEXT_PUBLIC_MEMORY_MONITORING=false

# 请求监控
NEXT_PUBLIC_REQUEST_MONITORING=false

# 错误监控
NEXT_PUBLIC_ERROR_MONITORING=true

# ===========================================
# 实验性功能配置
# ===========================================

# A/B测试配置
NEXT_PUBLIC_AB_TESTING=false

# 功能开关
NEXT_PUBLIC_FEATURE_FLAG_AI_V2=true
NEXT_PUBLIC_FEATURE_FLAG_NEW_UI=false
NEXT_PUBLIC_FEATURE_FLAG_BETA_FEATURES=false

# ===========================================
# 合规和隐私配置
# ===========================================

# 隐私政策URL
NEXT_PUBLIC_PRIVACY_POLICY_URL=/privacy

# 服务条款URL
NEXT_PUBLIC_TERMS_OF_SERVICE_URL=/terms

# GDPR合规
NEXT_PUBLIC_GDPR_COMPLIANT=true

# 年龄限制
NEXT_PUBLIC_MINIMUM_AGE=0
NEXT_PUBLIC_MAXIMUM_AGE=22

# ===========================================
# 社交媒体集成
# ===========================================

# 分享配置
NEXT_PUBLIC_SHARE_URL=https://yyc3.ai
NEXT_PUBLIC_SHARE_TITLE=YYC³ AI小语智能成长守护系统
NEXT_PUBLIC_SHARE_DESCRIPTION=0-22岁全周期AI智能成长守护平台

# Open Graph配置
NEXT_PUBLIC_OG_IMAGE=https://yyc3.ai/og-image.png
NEXT_PUBLIC_OG_TYPE=website

# Twitter配置
NEXT_PUBLIC_TWITTER_HANDLE=@yyc3_ai
NEXT_PUBLIC_TWITTER_SITE=@yyc3_ai
